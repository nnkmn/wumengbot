# 应用配置
APP_NAME=WumengBot
APP_VERSION=1.0.0
DEBUG=True

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_URL=sqlite:///./wumengbot.db

# Redis配置
REDIS_URL=redis://localhost:6379/0

# maimai.py配置
DIVINGFISH_TOKEN=your_divingfish_token_here
LXNS_TOKEN=your_lxns_token_here

# CORS配置
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# 爬虫配置
SPIDER_ENABLED=True
SPIDER_CONCURRENT_REQUESTS=4
SPIDER_REQUEST_TIMEOUT=30
SPIDER_RETRY_TIMES=3
SPIDER_RETRY_DELAY=5
SPIDER_DOWNLOAD_DELAY=1.0
SPIDER_RANDOMIZE_DOWNLOAD_DELAY=True
SPIDER_ROBOTSTXT_OBEY=True

# 爬虫代理配置
SPIDER_PROXY_ENABLED=False
SPIDER_PROXY_URL=http://localhost:8888

# 爬虫调度配置
SPIDER_SCHEDULE_WQ_CRON=*/5 * * * *
SPIDER_SCHEDULE_WQ_ENABLED=True
SPIDER_SCHEDULE_AI_CRON=*/10 * * * *
SPIDER_SCHEDULE_AI_ENABLED=True
SPIDER_SCHEDULE_WI_CRON=*/15 * * * *
SPIDER_SCHEDULE_WI_ENABLED=True
SPIDER_SCHEDULE_AT_CRON=*/20 * * * *
SPIDER_SCHEDULE_AT_ENABLED=True

# 数据处理配置
SPIDER_DATA_PROCESSING_REMOVE_DUPLICATES=True
SPIDER_DATA_PROCESSING_FILL_MISSING_VALUES=True
SPIDER_DATA_PROCESSING_VALIDATE_DATA=True
SPIDER_DATA_PROCESSING_STANDARDIZE_FORMAT=True
SPIDER_DATA_PROCESSING_MERGE_SOURCES=True
SPIDER_DATA_PROCESSING_RESOLVE_CONFLICTS=True
SPIDER_DATA_PROCESSING_CREATE_RELATIONSHIPS=True
